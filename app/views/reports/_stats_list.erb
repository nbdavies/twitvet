<div class="report">
    <h3>Stats for <a href="http://www.twitter.com/<%= @report.name %>">@<%= @report.name %></a></h3>
    <span class="updated">Retrieved at: <%= @report.updated_at %></span>
    <ul id="stats">
      <li id="score">
        <strong>Overall score:</strong>
        <p><%= @report.tally %></p>
      </li>
      <li>
        <strong>Total number of tweets:</strong>
        <p><%= @report.total_tweets %></p>
      </li>
      <li>
        <strong>Total number of followers:</strong>
        <p><%= @report.followers_count %></p>
      </li>
      <li>
        <strong>Joined on:</strong>
        <p><%= @report.start_date %></p>
      </li>
      <li>
        <strong>Percent of tweets repeated:</strong>
        <p><%= @report.repetition_percent %>%</p>
      </li>
      <li>
        <strong>Percent of tweets faved or retweeted:</strong>
        <p><%= @report.faved_retweeted_percent %>%</p>
      </li>
      <li>
        <strong>Percent of <%= @report.name %>'s followers who get followed back:</strong>
        <p><%= @report.follower_friend_overlap_percent %>%</p>
      </li>
      <% if session[:user_handle] %>
        <li>
          <strong>Number of common followers with you</strong>
          <p>
          <%= @report.common_followers(session[:user_handle]) %>
          </p>
        </li>
      <% end %>
      <li>
        <strong><%= @report.name %>'s average tweets per day</strong>
        <p><%= @report.tweets_per_day  %></p>
      </li>
      <li>
        <strong>Ever updated their profile picture?</strong>
        <p>
          <% if @report.has_default_image %>
          no
          <% else %>
          yes
          <% end %>
        </p>
      </li>
    </ul>
  </div>
